<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="fortuna" level="INFO" />
    <logger name="org.asynchttpclient.netty.handler.WebSocketHandler" level="ERROR" />
    <logger name="org.openqa.selenium.remote.http.WebSocket" level="ERROR" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>